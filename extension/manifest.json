{
	"manifest_version": 2,
	"version": "0.9.5",
	"name": "Image Picka",
	"description": "__MSG_extensionDescription__",
	"author": "eight",
	"homepage_url": "https://github.com/eight04/image-picka",
	"applications": {
		"gecko": {
			"id": "image-picka@eight04.blogspot.com"
		}
	},
	"permissions": [
		"downloads",
		"storage",
		"contextMenus",
		"activeTab",
		"notifications",
		"<all_urls>"
	],
	"optional_permissions": [
		"webNavigation"
	],
	"background": {
		"scripts": [
			"vendor/browser-polyfill.min.js",
      "vendor/content-disposition.min.js",
			"vendor/expression-eval.min.js",
			"vendor/webext-menus.min.js",
			"lib/pref.js",
      "lib/fetch.js",
      "lib/fetch-image.js",
			"background/download.js",
			"background/create-tab.js",
			"background/background.js"
		]
	},
	"content_scripts": [
		{
			"all_frames": true,
			"matches": [
				"<all_urls>"
			],
			"js": [
				"vendor/browser-polyfill.min.js",
				"vendor/content-disposition.min.js",
				"lib/pref.js",
				"lib/fetch.js",
        "lib/fetch-image.js",
				"content/url-map.js",
				"content/image-src.js",
				"content/dragndrop.js",
				"content/content.js"
			],
			"run_at": "document_start"
		}
	],
	"options_ui": {
		"page": "options/options.html",
		"browser_style": true
	},
	"web_accessible_resources": ["public/*"],
	"browser_action": {
		"default_title": "Pick Images",
		"default_icon": "icon.svg"
	},
	"icons": {
		"32": "icon.svg"
	},
	"default_locale": "en"
}
